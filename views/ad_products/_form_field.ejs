
<div >
        <div class="form-row">
            <div class="form-item">
                <label>Tên sản phẩm</label>
                <input type="text" name="title" id="title" value="<%= product.name%>"/>
            </div>
            <div class="form-item">
                <label>Loại sản phẩm</label>
                <select name="Author">
                <% types.forEach(type=>{ %>
                    <%if(type.id === product.product_type){%>
                        <option selected label="<%= type.name%>" value="<%=type.id %> "></option>
                    <%} else {%>
                        <option  label="<%= type.name%>" value="<%=type.id %> "></option>  
                    <%}%>
                <% }) %>
                </select>
        </div>
        </div>
      
        

    <div class="form-row">    
        <div class="form-item">
            <label>Ngày tạo</label>
            <input type="date" name="publishDate" value ="<%= product.publishDate == null ? '': product.publishDate.toISOString().split('T')[0]%>" > 
        </div>
    
        <div class="form-item">
            <label>Giá bán</label>
            <input type="number" name="pageCount" value ="<%= product.price %>" > 
        </div>
    </div>

    <div class="form-row">
        <div class="form-item  ">
            <label>Chọn ảnh</label>
            <div class="wrap-filepond">
                <input class="filepond" type="file" name="cover" multiple />
            </div>
           
        </div>

        <div class="form-item">
            <label>Mô tả:</label>
            <textarea  name="description">  
                <%= product.description %>
            </textarea>
        </div>
    </div>
       
</div>
